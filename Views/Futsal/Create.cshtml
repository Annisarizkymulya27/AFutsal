@model Lapangan

@{ 
    Layout = "_LayoutAdmin";
}

<h1>Create</h1>

<h4>Lapangan</h4>
<hr />
<div class="row">
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="NamaLapang" class="control-label"></label>
                <input asp-for="NamaLapang" class="form-control" />
                <span asp-validation-for="NamaLapang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fasilitas" class="control-label"></label>
                <textarea asp-for="Fasilitas" class="form-control"></textarea>
                <span asp-validation-for="Fasilitas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarif" class="control-label"></label>
                <input asp-for="Tarif" class="form-control" />
                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

